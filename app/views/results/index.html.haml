%small.text-muted Results
%h1=current_project.name

-current_project.flow.sections.where(level:1).each do |s|
  %h2=s.title
  -s.children.each do |c|
    %h3=c.title
    -c.prompts.each do |p|
      %p=p.instructions
      -if @replies[p.id]
        %p
          %b=@replies[p.id].answer

%pre=@replies